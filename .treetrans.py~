
import re

from hlab.pathutils import FilePath, DirPath

def treetrans(trans, indir, outdir, incfile=None, incdir=None):
    indir = DirPath(indir)
    outdir = DirPath(outdir)
    incfile = make_includer(incfile)
    incdir = make_includer(incdir)
    for child in indir:
        if child.isdir():
            if incdir(child):
                treetrans(child, outdir.dchild(child.basename()))
        else:
            op = incfile(child)
            if op:
                outdir.reqdir()
                outchild = outdir.child(child.basename())
                trans(op, outchild)

def make_includer(op):
    if op is None:
        return lambda x : x
    if isinstance(op, str):
        r = re.compile(op)
        def func(path):
            m = r.match(path)
            if not m:
                return False
            g = m.groups()
            if not g:
                return path
            return g
        return lambda x: m.match(x)
    if callable(op):
        return op
    assert 0

